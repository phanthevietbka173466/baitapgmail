<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <ImageView
        android:id="@+id/image_avatar"
        android:visibility="gone"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/thumb1"/>

    <TextView
        android:id="@+id/text_round"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/round_background"
        android:gravity="center"
        android:text="T"
        android:textSize="32sp"/>

    <TextView
        android:id="@+id/text_fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/text_round"
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@id/text_round"

        android:text="Full name"
        android:textSize="14sp"/>
    <TextView
        android:id="@+id/text_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/text_round"
        android:layout_alignBottom="@id/text_round"
        android:layout_marginLeft="5dp"

        android:layout_below="@id/text_fullname"
        android:text="Content"
        android:textSize="14sp"/>

    <ImageView
        android:id="@+id/image_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_star_normal"
        android:layout_alignParentRight="true"/>
</RelativeLayout>